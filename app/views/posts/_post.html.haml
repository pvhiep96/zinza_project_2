.option-area
  .option
    %span.option_item
    %span.option_item
    %span.option_item
  .option-menu
    %li 
      .destroy-post{'data-id': "#{post.id}" } Delete
    %li Edit
%li.content_item
  %span.content
    = post.content
  %span.timestamp
    = time_ago_in_words(post.created_at)
    ago.
  %hr/
  .comment-area
    - post.comments.each do |comment|
      %span.comment_item
        = comment.user.name
        = comment.content
      %br
  = form_for ([post, post.comments.build]) do |f|
    = f.text_field :content, placeholder: "Comment ...", class: "comment_textbox"
    .submit_comment
      = f.submit
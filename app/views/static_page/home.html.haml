.container
  .row
    %aside.col-md-4
      %section.user_info
        = render 'shared/user_info'
      %section.post_form
        = render 'shared/post_form'
    .col-md-8.posts
      - @posts.each do |post|
        %li.content_item
          %span.content
            = post.content
          %span.timestamp
            = time_ago_in_words(post.created_at)
            ago.
          %button.destroy-post{'data-id': "#{post.id}" } Delete